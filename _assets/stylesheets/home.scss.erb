$title-bold: 'Oswald', sans-serif;
$body-text: helvetica, arial, sans-serif;

// breakpoints
$large: 1200px;
$tablet: 900px;
$phone:  540px;

#top-headline{
  position: relative;
  height: 30vh;
  background-color: darkblue;
  font-size: 28pt;
  color: white;
  background-color: none;
  background-image: url(<%= asset_path "../images/syria.jpg" %>);
  background-attachment: fixed;
  @media screen and (max-height: 1000px){
    height: 400px;
  }
  & h1{
    padding: 5%;
    font-family: $title-bold;
    font-weight: 700;
    position:absolute;
    top:30%;
    left:50%;
    -webkit-transform:translate(-50%,-30%);
    transform:translate(-50%,-40%); 
    margin-right: -50%;
  }
  @media screen and (max-width: $large){
    font-size: 26pt;
  }
  @media screen and (max-width: $tablet){
    font-size: 24pt;
  }
  @media screen and (max-width: $phone){
    font-size: 22pt;
  }
  & h3{
    padding: 5%;
    font-family: $title-bold;
    font-weight: 700;
    position:absolute;
    top:80%;
    left:50%;
    -webkit-transform:translate(-50%,-70%);
    transform:translate(-50%,-60%); 
    margin-right: -50%;
    margin-top: 5px;
  }
  @media screen and (max-width: $large){
    font-size: 26pt;
  }
  @media screen and (max-width: $tablet){
    font-size: 24pt;
  }
  @media screen and (max-width: $phone){
    font-size: 22pt;
  }
}

#intro-text{
  color: white;
  font-size: 20pt;
  text-align: center;
  background-color: #928887;
  font-family: $body-text;
  padding: 3% 5vw 3% 5vw;
  // padding-left: 10vw;
  // padding-right: 10vw;
  & p{
    opacity: 1;
    max-width: 970px;
    margin: auto;
  }
  @media screen and (max-width: $tablet){
    font-size: 20pt;
  }
  @media screen and (max-width: $phone){
    font-size: 14pt;
  }
}

.share-text{
  font-family: $body-text;
  text-align: center;
  color: black;
  font-size: 12pt;
  margin-top: -4%;
  @media screen and (max-width: $phone){
    margin-bottom: 0;
    margin-top: 12%;
    font-size: 14pt;
  }
}

.share-social {
  position: relative;
  font-size: 12pt;
  margin: auto;
  text-align: center;
  vertical-align: middle;
  width: 100%;
  & a{
    display: inline-block;
    max-width: 105px;
    max-height: 45px;
    padding: 2% 3% 2% 3%;
    border-radius: 7px;
    box-sizing: border-box;
    color: white;
    &:visited{
      color: white;
    }
    &:hover{
      text-decoration: none;
    }
    @media screen and (max-width: $tablet){
    font-size: 14pt;
    }
    @media screen and (max-width: $phone){
      font-size: 12pt;
      width: 100%;
    }

  
  }
  @media screen and (max-width: $tablet){
    font-size: 40pt;
    top: -2vh;
  }
  @media screen and (max-width: $phone){
    font-size: 32pt;
    top: 0;
  }
  & .tumblr{
  background-color: #303D4E;
  }
}

.twitter{
  background-color: #5ea9dd;
 }

.facebook{
  background-color: #3b5998;
  @media screen and (max-width: $tablet){
    padding-top: 6%;
  }
}

.image-wrapper{
  display: inline-block;
  max-width: 600px;
  min-width: 600px;
  & h3{
    font-size: 20pt;
  }
  @media screen and (max-width: 600px){
    min-width: 300px;
    & a{
      margin-top: 2px;
    }
  }
}

.graphic{
  margin: auto;
  width: 70%;
  height: 70%;
  margin-top: 15px;
  margin-bottom: 15px;
  background-color: blue;
}

#the-facts{
  font-family: $body-text;
  color: black;
  background-color: white;
  padding: 5vh 2vw 3vh 0;
  @media screen and (max-width: $tablet){
    font-size: 38pt;
  }
  @media screen and (max-width: $phone){
    font-size: 28pt;
  }
  & a{
    color: white;
    transition: all .2s ease-in-out;
  }
  & h2{
    font-size: 30pt;
    margin-left: 5%;
  }
}

.img-share-text{
  letter-spacing: 0;
  font-size: 12pt;
  margin-top: 2%;
  margin-bottom: 1%;
  text-align: center;
  @media screen and (max-width: 600px){
    margin-top: 6%;
    font-size: 14pt;
    margin-bottom: 0;
  }
}


.banner-wrapper{
  padding-top: 2vh;
  max-width: 800px;
  margin: auto;
  & p{
    text-align: left;
    margin-left: 0
  }
}



ul.bxslider{
  margin: 0;
  padding: 0;
}



#factframe{
  text-align: center;
  font-family: $body-text;
  font-size: 48pt;
  color: black;
  margin: 0 auto;
  background-color: white;
  padding-top: 4vh;
  letter-spacing: 0.2vw;
  padding-bottom: 4vh;
  @media screen and (max-width: $tablet){
    font-size: 38pt;
  }
  @media screen and (max-width: $phone){
    font-size: 28pt;
  }
}

.zip-form{
  @media screen and (max-width: 450px){
    width: 100%;
  }
  & p{
    font-size: 14pt;
    margin: 0px;
  }
  & input{
    position: relative;
    top: -40px;
    @media screen and (max-width: 600px){
      top: -5px;
    }
  }
}
.wrapper{
  width: 100%;
  margin: none;
}

.page-content{
  padding: none;
}

.site-footer{
  background-color: white;
  border: black;
}

.site-footer{
  & a{
    font-size: 16pt;
    margin-right: 2vw;
    padding-top: 20vh;
    &:hover{
      text-decoration: none;
      cursor: hand;}
    }
    @media screen and (max-width: $tablet){
      font-size: 12pt;
    }
}

.footer-col-1{
  & img{
    padding: 2%;
    width: 30%;
  }
  & span{
    width:100%;
    text-align: left;
  }
}
